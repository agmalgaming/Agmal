<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agmal.agmal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MetaViewActivity"
            android:parentActivityName=".view.MetaActivity" />
        <activity android:name=".view.MetaActivity">
        </activity>
        <activity android:name=".view.EmblemActivity" />
        <activity android:name=".view.ItemsActivity" />
        <activity
            android:name=".view.HeroDetailActivity"
            android:parentActivityName=".view.HomeActivity" />
        <activity android:name=".view.HomeActivity" />
    </application>

</manifest>