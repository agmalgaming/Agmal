<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_emblem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPink2"
    tools:context=".view.EmblemActivity"
    android:fitsSystemWindows="true">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navDrawer_emblem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:itemTextAppearance="@style/IniTextApp"
        app:headerLayout="@layout/nav_drawer_header"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_emblem"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:minHeight="?attr/actionBarSize"
            android:background="@drawable/bgtoolbar"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_detail_emblem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/colorPink1"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_emblem">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_emblemIcon_emblem"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="32dp"/>
                    <TextView
                        android:id="@+id/tv_emblemName_emblem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emblem Title"
                        android:textSize="24sp"
                        android:textColor="#000"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dedede"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attributes:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_attr1Title_emblem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Physical ATK: "
                            android:textSize="14sp"
                            android:textColor="#000"
                            android:textAllCaps="true"/>
                        <TextView
                            android:id="@+id/tv_attr1Isi_emblem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+14"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_attr2Title_emblem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Physical ATK: "
                            android:textSize="14sp"
                            android:textColor="#000"
                            android:textAllCaps="true"/>
                        <TextView
                            android:id="@+id/tv_attr2Isi_emblem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+14"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_attr3Title_emblem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Physical ATK: "
                            android:textSize="14sp"
                            android:textColor="#000"
                            android:textAllCaps="true"/>
                        <TextView
                            android:id="@+id/tv_attr3Isi_emblem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+14"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_attr4Title_emblem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Physical ATK: "
                            android:textSize="14sp"
                            android:textColor="#000"
                            android:textAllCaps="true"/>
                        <TextView
                            android:id="@+id/tv_attr4Isi_emblem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+14"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_attr5Title_emblem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Physical ATK: "
                            android:textSize="14sp"
                            android:textColor="#000"
                            android:textAllCaps="true"/>
                        <TextView
                            android:id="@+id/tv_attr5Isi_emblem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+14"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/lin_lategori_emblem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/cv_detail_emblem">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_subtalent_emblem"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="subtalent"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:textColor="#fff"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_talent_emblem"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                app:backgroundTint="@color/colorPink1"
                android:gravity="center"
                android:text="talent"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:textColor="@color/colorPink3"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_talent_emblem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/colorPink3"
            app:layout_constraintTop_toBottomOf="@+id/lin_lategori_emblem">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_subtalents_emblem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingStart="4dp"
                android:paddingEnd="2dp"
                android:visibility="visible"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_talens_emblem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="4dp"
                android:paddingEnd="2dp"
                android:visibility="gone"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_descTalent_emblem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorPink3"
            app:layout_constraintTop_toBottomOf="@+id/cv_talent_emblem">
            <TextView
                android:id="@+id/tv_descTalent_emblem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Tekan telent icon intuk melihat deskripsi tanlent"/>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>