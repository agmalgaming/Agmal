<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:elevation="8dp"
    app:cardBackgroundColor="#fab7d6"
    android:layout_margin="4dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="4dp">
        <TextView
            android:id="@+id/tv_itemTier_rvHero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Item"
            android:textColor="#f576ab"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/iv_itemIcon_rvHero"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv_itemTier_rvHero"/>

        <TextView
            android:id="@+id/tv_itemName_rvHero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blade\nof the\nheptaseas "
            android:textColor="#f576ab"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_below="@+id/iv_itemIcon_rvHero"/>

        <TextView
            android:id="@+id/tv_itemCategory_rvHero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori Item"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv_itemName_rvHero"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>