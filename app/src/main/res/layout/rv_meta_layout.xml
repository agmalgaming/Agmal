<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/colorPink1"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_metaImage_metaLayout"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/agmal_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:id="@+id/tv_metaTitle_metaLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#f576ab"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_metaKonten_metaLayout"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="#fff"
                android:text="Review konten"
                android:textSize="14sp"
                android:ellipsize="end"
                android:inputType="none"
                android:maxLines="3"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>